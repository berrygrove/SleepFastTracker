<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_card" />
            <corners android:radius="16dp" />
            <stroke android:color="@color/primary" android:width="2dp" />
        </shape>
    </item>
    
    <!-- Divider line -->
    <item android:top="70dp">
        <shape android:shape="rectangle">
            <size android:height="1dp" />
            <solid android:color="@color/background_light" />
        </shape>
    </item>
    
    <!-- Fasting progress ring representation -->
    <item android:right="20dp" android:top="20dp">
        <shape android:shape="oval">
            <solid android:color="@color/primary" />
            <size android:width="40dp" android:height="40dp" />
        </shape>
    </item>
    
    <!-- Bedtime progress ring representation -->
    <item android:right="20dp" android:top="100dp">
        <shape android:shape="oval">
            <solid android:color="@color/accent" />
            <size android:width="40dp" android:height="40dp" />
        </shape>
    </item>
</layer-list> 